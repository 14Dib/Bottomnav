<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout_Food"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="10dp"
        android:layout_alignParentTop="true"


        android:layout_centerInParent="true"
        app:srcCompat="@drawable/caithia" />

    <TextView
        android:id="@+id/txtName"
        android:fontFamily="@font/bungee"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mì Trộn Hạnh Phúc"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/monney_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25.000 vnd"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="#F24C3D"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txtName"
        ></TextView>

    <TextView
        android:id="@+id/txtDes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Thong tin cua mon an"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/monney_food"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/txtadd_cart"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button3"
        android:gravity="center"
        android:text="ADD TO CART"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtDes"
        />

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button3"
        android:gravity="center"
        android:text="BACK"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtadd_cart"
        />



</RelativeLayout>