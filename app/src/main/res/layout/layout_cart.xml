<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/img_food"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        ></ImageView>
    <TextView
        android:id="@+id/name_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="NAME"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_food"
        ></TextView>

    <TextView
        android:id="@+id/des_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_food"
        android:text="Description"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="#acacac"
        android:padding="10dp"
        android:layout_below="@+id/name_food"
        ></TextView>

    <TextView
        android:id="@+id/monney_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25.000 vnd"
        android:textSize="19dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_toRightOf="@+id/img_food"
        android:layout_below="@+id/des_food"
        android:layout_alignBottom="@id/img_food"
        ></TextView>


    <TextView
        android:id="@+id/txt_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/round_button3"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/des_food"
        />

    <TextView
        android:id="@+id/txt_Decrease"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/round_button3"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/des_food"
        android:layout_marginRight="90dp"
        />

    <EditText
        android:id="@+id/Soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/des_food"
        android:layout_marginRight="45dp"
        ></EditText>

</RelativeLayout>